{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->

        <!-- Icon -->
        <div class="fadeIn first" style="width: 60px; height: 60px">
            <img src="data:image/png;base64," id="icon" alt="User Icon" />
        </div>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey }}
            </div>
        {% endif %}

        <!-- Login Form -->
        <form action="{{ path('login') }}" method="post">
            <input type="text" id="username" class="fadeIn second" name="_username" placeholder="login" value="{{ lastUsername }}">
            <input type="password" id="password" class="fadeIn third" name="_password" placeholder="password">
            <input type="submit" class="fadeIn fourth" value="Log In">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="{{ path('forgotPassword') }}">Forgot Password?</a>
        </div>

    </div>
</div>

{% endblock %}